<p id="notice"><%= notice %></p>

<%= form_for @user, as: :session, url: session_url do |f| %>
	<%= f.text_field :email, placeholder: 'Email Address' %><br>
	<%= f.password_field :password, placeholder: 'Password' %><br>
	<%= f.submit 'Log In!' %>
<% end %>

<% if !@user.oauth_token %>
  <%= button_to "LoginWithTwitter", '/users/twitterlogin', method: "get" %>
<% end %>

<p>Don't have an account yet? <%= link_to 'Sign Up', signup_path %></p>